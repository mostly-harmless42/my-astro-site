<section class="hero">
  <div class="hero-bg"></div>

  <div class="hero-inner">
    <p class="eyebrow">be adorned & adored</p>
    <h1 class="title"><span class="font1">A</span><span class="font2"> RMOURED  </span><span class="font1">R</span><span class="font2">EGALIA</span> </h1>
    <p class="subtitle">house of chainmaille</p>
  </div>
</section>

<section class="next-section">
  <div class="next-bg"></div>

  <div class="next-inner">
    <h2>Cool Stuff Here</h2>
    <p>some options down here</p>
  </div>
</section>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  // -------------------
  // Intro text animation
  // -------------------
  const intro = gsap.timeline({ defaults: { ease: "sine.out" } });

  intro
    .from(".eyebrow", { opacity: 0, y: 80, duration: 1.5 })
    .from(".title", { opacity: 0, y: 40, duration: 1.2 }, "-=0.9")
    .from(".subtitle", { opacity: 0, y: 20, duration: 1 }, "-=0.8");

  // -------------------
  // Hero background parallax
  // -------------------
  gsap.to(".hero-bg", {
    yPercent: 30,
    ease: "none",
    scrollTrigger: {
      trigger: ".hero",
      start: "top top",
      end: "+=100%",
      scrub: true
    }
  });

  // -------------------
  // Hero blur + fade + snap
  // -------------------
  gsap.timeline({
    scrollTrigger: {
      trigger: ".hero",
      start: "top top",
      end: "+=100%",
      scrub: true,
      snap: {
        snapTo: [0, 1],
        duration: .8,
        ease: "none"
      }
    }
  })
    .to(".hero-inner", {
      opacity: 0,
      filter: "blur(12px)",
      ease: "none"
    })
    .to(".hero-bg", {
      filter: "blur(40px)",
      ease: "none"
    }, 0)
    .fromTo(
      ".next-inner",
      { opacity: 0 },
      { opacity: 1, ease: "none" },
      0
    );

  // -------------------
  // NEXT SECTION: background parallax + fade-in
  // -------------------
  gsap.fromTo(
    ".next-bg",
    {
      yPercent: -10,
      opacity: 0
    },
    {
      yPercent: 10,
      opacity: 1,
      ease: "none",
      scrollTrigger: {
        trigger: ".next-section",
        start: "top bottom",
        end: "+=100%",
        scrub: true
      }
    }
  );
</script>

